
function charCounter(string, char){
  	var counter = 0;
	for(var i = 0; i < string.length; i++)
    	if(string.charAt(i) === char)
        	counter += 1;
          return counter;    
}
function countBs(string){
	return charCounter(string, "B");
}
console.log(countBs("BBC"));
// → 2
console.log(charCounter("kakkerlak", "k"));
// → 4
